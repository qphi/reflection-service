{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowUmdGlobalAccess": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2019", "es2017", "es7", "es6", "dom"],
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": [
    "node_modules"
  ]
}
